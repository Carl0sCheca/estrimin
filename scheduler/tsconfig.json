{
  "exclude": ["node_modules", "./*.ts", "__test__", "../dist", "../.next"],
  "include": ["**/*", "../src/lib/**/*", "../src/generated/**/*"],
  "compilerOptions": {
    "target": "es2023",
    "module": "esnext",
    "rootDir": "../",
    "moduleResolution": "node",
    "baseUrl": "..",
    "outDir": "../dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@scheduler/*": [
        "./scheduler/src/*"
      ]
    },
  }
}
